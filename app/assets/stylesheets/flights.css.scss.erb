@import "_vars";
@import "compass/css3/border-radius";
@import "compass/css3/box";
@import "compass/css3/text-shadow";

article#flights {
    #vitals {
        a {
            color: $text-color;
            &:hover {
                color: $text-color;
                text-decoration: underline;
            }
        }
    }

    // INDEX

    p#filters {
        text-align: center;
        text-transform: uppercase;
        font-size: 10pt;
    }

    // SHOW

    section#overview {
        margin-bottom: 2em;
        
        h1 {
            @include border-radius(5px);
            //@include background-image(linear-gradient(top, lighten(mix($color, $alternate-color), 20%), darken(mix($color, $alternate-color), 20%)));
            @include vertical-gradient(lighten($base-color, 10%), darken($base-color, 10%));
            //@include text-shadow(rgba(black, 0.75) 0 -1px 1px);
            text-shadow: 0 -1px 1px rgba(black, 0.75);
            color: white;
            font-size: 18pt;
            padding: 5px 10px;

            time {
                font-weight: bold;
                padding-right: 10px;
                border-right: 2px solid rgba(white, 0.5);
            }
        }

        p {
            @include border-bottom-radius(5px);

            color: $content-text-color;
            background-color: lighten($alternate-color, 48%);
            border-left: 1px solid lighten($alternate-color, 25%);
            border-right: 1px solid lighten($alternate-color, 25%);
            border-bottom: 1px solid lighten($alternate-color, 25%);

            width: 95%;
            padding: 5px 10px;
            margin-left: auto;
            margin-right: auto;
        }
    }

    section#details {
        @include display-box;
        @include box-orient(horizontal);

        #blog {
            @include box-flex(1);

            /*width: 60%;*/
            padding-right: 1em;
            margin-right: 1em;
            border-right: 2px solid lighten($alternate-color, 30%);

            p {
                color: $content-text-color;
                font-size: 11pt;
                margin-top: 1em;
                margin-bottom: 1em;
            }
        }

        #stats {
            /*width: 40%;*/
            
            h2 {
                font-size: 14pt;
                color: $deemphasize-header-color;

                margin-top: 1em;
                margin-bottom: 0.5em;
            }

            p {
                text-align: center;
                font-style: italic;
                font-size: 11pt;
            }

            .stat {
                @include display-box;
                @include box-orient(horizontal);

                &>div {
                    @include box-flex(1);
                    margin-left: 10px;
                }

                h3 {
                    font-size: 16pt;
                    margin-bottom: 5px;
                    text-decoration: none;
                }

                p {
                    font-size: 11pt;
                    text-align: left;
                    font-style: normal;
                }

            }
        }
    }

    hr {
            height: 1px;
            background-color: gray;
            border-width: 0;
            margin-top: 2em;
            margin-bottom: 2em;
        }

    nav {
        text-align: center;
        margin-top: 1em;
    }

    // EDIT

    form.edit_flight {
        a#new_photo_button {
            font-size: 10pt;
        }

        li img {
            vertical-align: middle;
        }
    }

    #uploader {
        color: $alternate-color;
        font-size: 14pt;
        font-weight: bold;
        text-align: center;
        padding: 20px 10px;
        background-color: lighten($alternate-color, 40%);
        border: 5px dashed lighten($alternate-color, 25%);

        .file-row {
            @include display-box;
            @include box-orient(horizontal);
            @include box-pack(center);
        }

        .file {
            margin: 20px;
            width: 100px;

            .empty {
                background: url("<%= image_path 'document-empty.png' %>") no-repeat left top;
                width: 44px;
                height: 56px;
                margin-left: 28px;
            }

            .filled {
                background: url("<%= image_path 'document-filled.png' %>") no-repeat left top;
                width: 0;
                height: 56px;
            }

            p {
                text-align: center;
                overflow: hidden;
                text-overflow: ellipsis;
            }
            
            &.finished p { color: black; }
            &.error p { color: #900; }

            p.message {
                font-size: 10pt;
                font-style: italic;
                font-weight: normal;
            }
        }
    }
}
